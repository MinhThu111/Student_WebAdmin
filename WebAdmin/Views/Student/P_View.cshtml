@model EM_Person
<div class="wrapper">
    <div class="page-wrapper">
        <div class="page-content-wrapper">
            <div class="page-content">
                <div class="card radius-15">
                    <div class="card-body">
                        <form>
                            <div class="row border-0">
                                @*<div class="modal-header border-0">
                                    <h4 class="modal-title">THÊM</h4>
                                </div>*@
                                <div class="col-12 col-lg-6 border-right">
                                    <div class="form-row">
                                        <div class="form-group col-md-6">
                                            <label class="control-label">Họ</label>
                                            <input asp-for="lastName" class="form-control" placeholder="Họ" readonly>
                                        </div>
                                        <div class="form-group col-md-6">
                                            <label class="control-label">Tên</label>
                                            <input asp-for="firstName" class="form-control " placeholder="Tên" readonly>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label">Ảnh</label>
                                        <img asp-for="avatarUrl" class="form-control" readonly/>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label">Ngày sinh</label>
                                        <input asp-for="birthDay" class="form-control" type="date" readonly>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label">Giới tính</label>
                                        <input asp-for="gender" class="form-control" readonly>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label">Nghề nghiệp</label>
                                        <input asp-for="personTypeId" class="form-control" readonly>
                                    </div>

                                    <div class="form-group">
                                        <label class="control-label">Tôn giáo</label>
                                        <input asp-for="religionId" class="form-control" readonly>
                                    </div>

                                    <div class="form-group">
                                        <label class="control-label">Dân tộc</label>
                                        <input asp-for="folkId" class="form-control" readonly>
                                    </div>
                                </div>
                                <div class="col-12 col-lg-6">
                                    <div class="form-group">
                                        <label class="control-label">Quốc tịch</label>
                                        <input asp-for="nationalityId" class="form-control" readonly>
                                    </div>
                                    <div class="form-group" id="div_form_province">
                                        <span class="has-float-label">
                                            <label asp-for="addressObj.provinceId">Tỉnh - Thành phố</label>
                                            <select asp-for="addressObj.provinceId" asp-items="ViewBag.ProvinceId"
                                                    class="select2 form-control" style="width:100%" onchange="LoadDistrict(this, '#div_form_district', '#form_data')">
                                                <option value="0">--Chọn--</option>
                                            </select>
                                        </span>
                                        <span asp-validation-for="addressObj.provinceId" class="invalid-feedback"></span>
                                    </div>
                                    <div class="form-group" id="div_form_district">
                                        <span class="has-float-label">
                                            <label asp-for="addressObj.districtId">Quận - Huyện</label>
                                            <select asp-for="addressObj.districtId" asp-items="ViewBag.DistrictId"
                                                    class="form-control select2 " onchange="LoadWard(this, '#div_form_ward', '#form_data')" style="width:100%">
                                                <option value="0">--Chọn--</option>
                                            </select>
                                        </span>
                                        <span asp-validation-for="addressObj.districtId" class="invalid-feedback"></span>
                                    </div>
                                    <div class="form-group" id="div_form_ward">
                                        <span class="has-float-label">
                                            <label asp-for="addressObj.wardId">Phường - Xã</label>
                                            <select asp-for="addressObj.wardId" asp-items="ViewBag.WardId" class="select2 form-control" style="width:100%">
                                                <option value="0">--Chọn--</option>
                                            </select>
                                        </span>
                                    </div>
                                    <div class="form-group">
                                            <label asp-for="addressObj.addressText">Số nhà/tổ/khu phố</label>
                                            <input asp-for="addressObj.addressText" class="form-control" />

                                    </div>

                                    <div class="form-group">
                                        <label class="control-label">Số điện thoại</label>
                                        <input asp-for="phoneNumber" class="form-control" placeholder="Phone number">
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label">Địa chỉ Email</label>
                                        <input asp-for="email" class="form-control" placeholder="Email">
                                    </div>
                                    <div>
                                        <input type="button" value="HỦY BỎ" class="btn btn-outline-secondary waves-effect " onclick="BackToTable('#div_main_table', '#div_view_panel');" />
                                        <input type="submit" class="btn btn-success" value="THÊM">
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>