@{
    ViewData["Title"] = "Student";
}

@section Styles{
    <partial name="_P_StylesTableAndFormBasic" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons" />
    <link href="~/assets/plugins/select2/css/select2.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/uikit/3.0.2/css/uikit.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/1.13.1/css/dataTables.uikit.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
}
@section Scripts{
    <partial name="_P_ScriptsTableAndFormBasic" />
    <script src="~/assets/plugins/select2/js/select2.min.js"></script>
    <script src="~/controller/student_manage.js" asp-append-version="true"></script>
}

<div class="wrapper">
    <div class="page-wrapper">
        <div class="page-content-wrapper">
            <div class="page-content" id="div_main_table">
                <div class="card radius-15">
                    <div class="card-body">
                        <div class="card-title">
                            <h5 class="mb-0">Manage Student </h5>
                        </div>
                        <hr />
                        <div class="col-xl-3 col-lg-2 col-md-6 mb-1 px-1">
                            <div class="input-group input-group-sm">
                                <div class="input-group-prepend">
                                    <label class="input-group-text col-auto mb-1 px-1" for="select_search_status">
                                        <i class="material-icons">&#xf023;</i>Trạng thái
                                    </label>
                                    <select id="select_search_status" class="col-md-5 rounded mb-1 px-1"
                                            onchange="SearchStatus()"
                                            data-live-search="false">
                                        <option value="0,1">--Tất cả--</option>
                                        <option class="text-success" value="1">Mở</option>
                                        <option class="text-warning" value="0">Khóa</option>
                                    </select>
                                    <div class="col-auto mb-1 px-1">
                                        <a href="#addNewPersonModal" class="btn btn-outline-info" onclick="ShowAddModal(this)"><i class="material-icons">&#xE147;</i> <span>Add New Student</span></a>
                                        <button class="btn btn-outline-dark" onclick="LoadDataTable()"><i class="material-icons">&#xe5d5;</i> <span>Load</span></button>
                                    </div>
                                </div>


                            </div>
                        </div>
                        <div class="table-responsive">

                            <table class="table mb-0 w-100 uk-table uk-table-hover uk-table-striped uk-table-middle table-bordered" id="table_main">
                                <thead>
                                    <tr style="background-color: rgb(78, 173, 207)">
                                        <th>Stt</th>
                                        <th>Họ và tên</th>
                                        <th>Giới tính</th>
                                        <th>Ngày sinh</th>
                                        <th>Địa chỉ Email</th>
                                        <th>Nghề nghiệp</th>
                                        <th>Quốc tịch</th>
                                        <th>Trang thái</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tfoot>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-body card_background_detail" id="div_view_panel" style="display:none;"></div>
        </div>
    </div>

</div>