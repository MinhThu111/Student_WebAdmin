@{
    ViewData["Title"] = "Student";
}
@section Styles{
    <partial name="_P_StylesTableAndFormBasic" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons" />
    <link href="~/assets/css/dataTables.uikit.min.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/assets/plugins/select2/css/select2.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
}
@section Scripts{
    <partial name="_P_ScriptsTableAndFormBasic" />
    <script src="~/assets/plugins/select2/js/select2.min.js"></script>
    <script src="~/assets/libs/bootstrap-maxlength/bootstrap-maxlength.min.js"></script>
    <script src="~/controller/Student_manage.js" asp-append-version="true"></script>
}

<div class="wrapper">
    <div class="page-wrapper">
        <div class="page-content-wrapper">
            <div class="page-content" id="div_main_table">
                <div class="card radius-15">
                    <div class="card-body">
                        <div class="card-title">
                            <h5 class="mb-0">QUẢN LÝ SINH VIÊN</h5>
                        </div>
                        <hr />
                        <div>
                            <div class="input-group" style="font-size:17px;">
                                <select id="select_search_status" class="col-md-auto btn-outline-primary"
                                        onchange="SearchStatus()"
                                        data-live-search="false" style="font-size:17px; min-width:200px">
                                    <option value="0,1">Trạng thái</option>
                                    <option value="0,1">--Tất cả--</option>
                                    <option value="1">Mở</option>
                                    <option value="0">Khóa</option>
                                </select>
                                <select id="select_search_persontype" onchange="SearchStatus()"
                                        data-live-search="false"
                                        class="col-md-auto btn-outline-success ml-3" style="font-size:17px; min-width:200px">
                                    <option value="1,2">Nghề nghiệp</option>
                                    <option value="1,2">--Tất cả--</option>
                                    <option value="1">Sinh viên</option>
                                    <option value="2">Giảng viên</option>
                                </select>
                                <div class="col-12 col-lg-auto">
                                    <a href="#addNewPersonModal" class="btn btn-outline-info" onclick="ShowAddModal(this)"><i class="material-icons">&#xea4d;</i> <span>THÊM</span></a>
                                    <button class="btn btn-outline-dark ml-3" onclick="LoadDataTable()"><i class="material-icons">&#xe5d5;</i> <span>TẢI LẠI</span></button>

                                </div>
                            </div>


                        </div>
                    </div>
                    @*<img src="" />*@
                    <div class="table-responsive pl-2">

                        <table class="table mb-0 w-100 uk-table uk-table-hover uk-table-striped uk-table-middle table-bordered" id="table_main">
                            <thead>
                                <tr style="background-color: rgb(78, 173, 207)">
                                    <th class="text-white">Stt</th>
                                    <th class="text-white">Họ và tên</th>
                                    <th class="text-white">Giới tính</th>
                                    <th class="text-white">Ngày sinh</th>
                                    <th class="text-white">Địa chỉ Email</th>
                                    <th class="text-white">Ảnh</th>
                                    <th class="text-white">Trang thái</th>
                                    <th class="text-white"></th>
                                </tr>
                            </thead>
                            <tfoot>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-body card_background_detail" id="div_view_panel" style="display:none;"></div>
    </div>
</div>

</div>